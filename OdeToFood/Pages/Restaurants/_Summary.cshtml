@using OdeToFood.Core
@model Restaurant

<div class="card mb-3">
    <div class="card-body">
        <div class="card-title">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-text">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div>
            <a class="btn btn-lg"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                <i class="fa fa-search-plus" aria-hidden="true"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                <i class="fa fa-edit" aria-hidden="true"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </a>
        </div>
    </div>
</div>